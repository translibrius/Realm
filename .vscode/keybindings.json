[
  // Build current preset
  {
    "key": "ctrl+shift+b",
    "command": "cmake.build"
  },
  // Select build preset (so you can switch Debug â†” Release fast)
  {
    "key": "ctrl+shift+d",
    "command": "cmake.selectConfigurePreset"
  },
  // Clean current build preset
  {
    "key": "ctrl+alt+c",
    "command": "cmake.clean"
  },
  // Reconfigure CMake
  {
    "key": "ctrl+shift+f5",
    "command": "cmake.configure"
  },
  // Format code
  {
    "key": "ctrl+alt+f",
    "command": "editor.action.formatDocument"
  }
]